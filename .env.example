# Server Configuration
PORT=8000
NODE_ENV=development

# Mock Service Configuration
# Delay simulation for testing (milliseconds)
DEFAULT_DELAY_MS=0

# Maximum delay allowed via query params (milliseconds)
MAX_DELAY_MS=5000

# Mock Response Configuration
# Enable intelligent response matching (true/false)
ENABLE_SMART_RESPONSES=true

# Enable response delay variation for realism (true/false)
ENABLE_DELAY_VARIATION=true

# Enable rich content (visual, sources) in responses (true/false)
ENABLE_RICH_CONTENT=true

# Response mode: "smart", "echo", "random"
MOCK_RESPONSE_MODE=smart

# Persistence Configuration
# Enable data persistence (true/false)
ENABLE_PERSISTENCE=false

# Persistence type: "file", "memory"
PERSISTENCE_TYPE=file

# Data directory for file persistence
DATA_DIRECTORY=./data

# Enable/disable CORS
CORS_ENABLED=true

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=*

# Request logging level (none, basic, detailed)
LOG_LEVEL=basic

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Next.js Configuration
NEXT_TELEMETRY_DISABLED=1