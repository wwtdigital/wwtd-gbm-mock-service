{
  "name": "wwtd-gbm-mock-service",
  "version": "0.1.0",
  "scripts": {
    "dev": "node api/index.js",
    "build": "mkdir -p dist && cp -r api dist/",
    "start": "node api/index.js",
    "docker:build": "docker build -t wwtd-gbm-mock-service .",
    "docker:run": "docker run -d --name wwtd-gbm-mock-service -p 8000:8000 wwtd-gbm-mock-service",
    "docker:stop": "docker stop wwtd-gbm-mock-service && docker rm wwtd-gbm-mock-service",
    "test": "jest",
    "lint": "npx @biomejs/biome check .",
    "format": "npx @biomejs/biome format ."
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.2",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.17.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  }
}
